{
    "rules": [
        {
            "name": "Detect Suspicious Transaction Amount",
            "condition": "Transaction_Amount > 10000",
            "operator": "greaterThan",
            "value": 10000,
            "field": "Transaction_Amount",
            "action": "Flag for review"
        },
        {
            "name": "Identify Accounts with High Balances",
            "condition": "Account_Balance >= 100000",
            "operator": "greaterThanOrEqual",
            "value": 100000,
            "field": "Account_Balance",
            "action": "Perform enhanced due diligence"
        },
        {
            "name": "Monitor Transactions from High-Risk Countries",
            "condition": "Country in ['North Korea', 'Iran', 'Syria']",
            "operator": "equal",
            "value": [
                "North Korea",
                "Iran",
                "Syria"
            ],
            "field": "Country",
            "action": "Escalate for investigation"
        },
        {
            "name": "Detect Potential Money Laundering",
            "condition": "Reported_Amount < Transaction_Amount",
            "operator": "lessThan",
            "value": 1,
            "field": "Reported_Amount",
            "action": "Initiate suspicious activity report"
        },
        {
            "name": "Identify Customers with High Risk Scores",
            "condition": "Risk_Score > 80",
            "operator": "greaterThan",
            "value": 80,
            "field": "Risk_Score",
            "action": "Apply enhanced monitoring"
        },
        {
            "name": "Validate Currency Compliance",
            "condition": "Currency not in ['USD', 'EUR', 'GBP', 'JPY']",
            "operator": "notEqual",
            "value": [
                "USD",
                "EUR",
                "GBP",
                "JPY"
            ],
            "field": "Currency",
            "action": "Reject transaction"
        },
        {
            "name": "Detect Unusual Transaction Patterns",
            "condition": "Transaction_Amount > 2 * mean(Transaction_Amount)",
            "operator": "greaterThan",
            "value": 2,
            "field": "Transaction_Amount",
            "action": "Perform additional verification"
        },
        {
            "name": "Identify Dormant Accounts",
            "condition": "max(Transaction_Date) - min(Transaction_Date) > 365",
            "operator": "greaterThan",
            "value": 365,
            "field": "Transaction_Date",
            "action": "Flag for review"
        }
    ]
}